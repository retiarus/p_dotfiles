#!/bin/bash

host=$(hostname)

if [[ $(uname -p | grep "A10-7850K") == *A10-7850K* ]]; then
  printf "Definindo configurações de vídeo para $host sistema A10-7850K\n"

  if [ -x "$(command -v xrandr)" ]; then
    printf "xrandr está instalado\n"
    printf "Definindo configurações de vídeo\n"
    xrandr --output HDMI-0 --primary
    xrandr --output HDMI-0 --mode 1920x1080 --output DisplayPort-0 --mode 1440x900 --rate 75 --left-of HDMI-0
  else
    printf "xrandr não está instalado\n"
  fi

fi
